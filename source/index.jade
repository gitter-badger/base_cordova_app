doctype html
html
    head
        title #{project.name}
        // Meta
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(
            http-equiv="Content-Security-Policy",
            content="connect-src *; default-src *  data: gap: https://ssl.gstatic.com 'unsafe-eval'; font-src *;" +
            "frame-src *; img-src *; media-src *; object-src *; script-src * 'unsafe-inline' 'unsafe-eval';" +
            "style-src * 'unsafe-inline';"
        )
        meta(
            name="viewport",
            content="width=device-width,height=device-height,initial-scale=1," +
            "minimum-scale=1,maximum-scale=1,user-scalable=no"
        )
        // Mobile App Info
        meta(name="format-detection", content="telephone=no")
        meta(name="format-detection", content="telephone=no")
        // Theme Color
        meta(name="msapplication-tap-highlight", content="no")
        meta(name="mobile-web-app-capable", content="yes")
        meta(name="apple-mobile-web-app-capable", content="yes")
        meta(name="apple-mobile-web-app-status-bar-style", content="black")
        meta(name="apple-mobile-web-app-title", content="#{project.name}")
        // Favorite Icon
        meta(name="msapplication-TileImage", content="assets/img/touch/ms-touch-icon-144x144-precomposed.png")
        link(rel="apple-touch-icon", href="assets/img/touch/apple-touch-icon.png")
        link(rel="icon", sizes="192x192", href="assets/img/touch/chrome-touch-icon-192x192.png")
        link(rel="shortcut icon", href="assets/img/favicon.ico")
        // Entry point
        script(src='index.js')
    body
        #screen.container-fluid
