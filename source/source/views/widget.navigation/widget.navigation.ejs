<div class="container">
	<div class="navbar-header">
		<button
			type="button"
			class="navbar-toggle collapsed"
			data-toggle="collapse"
			data-target="#navbar"
			aria-expanded="false"
			aria-controls="navbar"
		>
			<span class="sr-only">Toggle navigation</span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
		</button>
		<a class="navbar-brand" href="#">{{ model.title }}</a>
	</div>
	<div id="navbar" class="navbar-collapse collapse">
		{{# if (model.mode === "login") { }}
		<form class="navbar-form navbar-right">
			<div class="form-group">
				<input
					autocapitalize="off"
					autocomplete="off"
					autocorrect="off"
					class="form-control"
					data-template="true"
					id="login_signin_email"
					onfocus="this.removeAttribute('readonly');"
					placeholder="{{ __('email') }}"
					readonly="readonly"
					spellcheck="false"
					type="email"
					value="{{ model.login_signin_email }}"
				>
			</div>
			<div class="form-group">
				<input
					autocapitalize="off"
					autocomplete="off"
					autocorrect="off"
					class="form-control"
					data-template="true"
					id="login_signin_password"
					placeholder="{{ __('password') }}"
					spellcheck="false"
					type="password"
					value="{{ model.login_signin_password }}"
				>
			</div>
			<button
				id="login_signin_submit"
				class="btn btn-success"
				type="button"
			>{{ __('sign in') }}</button>
		</form>
		{{# } else if (model.mode === "active") { }}
			<div class="navbar-form navbar-right">
				<div class="form-group">
					<span class="label label-default">{{ model.fullName }}</span>
				</div>
			</div>
		{{# } }}
	</div>
</div>
